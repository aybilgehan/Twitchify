<script>
    function updateConfig(id) {
        var input = document.getElementById(id);
        if (input.type == "checkbox") {
            configs[id.split('-')[0]][id.split('-')[1]] = input.checked;
        } else if (input.type != "file") {
            var value = input.value;
            configs[id.split('-')[0]][id.split('-')[1]] = value;
        };
    };

    function saveConfig() {
        $.ajax({
            url: appUrl + "update-config",
            type: "POST",
            data: { configs: JSON.stringify(configs), eventSubs: eventSubs },
            success: function (response) {
                if (response == "success") {
                    alert("success", "Configurations saved!");
                } else {
                    alert("danger", "Configurations could not saved!");
                }
            },
            error: function () {
                alert("danger", "Configurations could not saved!");
            }
        });
    }
</script>

<!-- File Uplaod -->
<script>

    var fileInputs = document.querySelectorAll('input[type="file"]');
    fileInputs.forEach(function (fileInput) {
        fileInput.addEventListener('change', function () {
            var file = fileInput.files[0];

            if(file.size > 1024 * 1024 * 1){
                alert("danger", "File size must be less than 1MB!");
                return;
            }

            var formData = new FormData();
            formData.append('file', file, file.name);
            formData.append('type', fileInput.id.split('-')[0]);

            $.ajax({
                url: appUrl + "upload",
                type: "POST",
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.status == "success") {
                        alert("success", "Image uploaded!");
                        document.getElementById(fileInput.id.split('-')[0] + '-imageUrl').value = response.url;
                        updateConfig(fileInput.id.split('-')[0] + '-imageUrl');
                    } else {
                        alert("danger", "Image could not uploaded!");
                    }
                },
                error: function () {
                    alert("danger", "Image could not uploaded!");
                }
            })
        });
    });
</script>


<script>
    var eventSubs = '{{eventSubTypes}}' == "null" ? [] : "{{eventSubTypes}}".split(",");
    var configs = JSON.parse('{{configs}}')

    window.onload = function () {
        if (eventSubs.length > 0) {
            document.getElementById('save-config').style.display = "block";
        }
        eventSubs.forEach(function (eventSub) {
            let checkbox = document.getElementById(eventSub);
            checkbox.checked = true;
            let collapse = document.getElementById(checkbox.value + '-Collapse');
            collapse.style.display = "block";
            let config = document.getElementById(checkbox.value + 'Collapse');
            config.querySelectorAll('input').forEach(function (input) {
                if (input.type == "checkbox") {
                    input.checked = configs[input.id.split('-')[0]].hasOwnProperty(input.id.split('-')[1]) ? configs[input.id.split('-')[0]][input.id.split('-')[1]] : false;
                } else if (input.type != "file") {
                    input.value = configs[input.id.split('-')[0]].hasOwnProperty(input.id.split('-')[1]) ? configs[input.id.split('-')[0]][input.id.split('-')[1]] : "-";
                }
            });
        });
    }

    // Listen for checkbox changes
    var checkboxes = document.getElementById('event-checkboxes').querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            var checkboxValue = this.value;
            var collapse = document.getElementById(checkboxValue + '-Collapse');
            if (this.checked) {
                collapse.style.display = "block";
                eventSubs.push(checkbox.id);
            } else {
                collapse.style.display = "none";
                eventSubs.splice(eventSubs.indexOf(checkbox.id), 1);
            }
            if (eventSubs.length == 0 && document.getElementById('save-config').style.display == "block") {
                document.getElementById('save-config').style.display = "none";
            } else if (eventSubs.length > 0 && document.getElementById('save-config').style.display == "none") {
                document.getElementById('save-config').style.display = "block";
            }
        });
    });
</script>

